<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.module.admin.ms.dao.MsConfigValueDao">

	<sql id="commCols">
		config_id configId,code code,value value,remark remark,create_time createTime,user_id userId
	</sql>

	<insert id="save" parameterType="msConfigValue" flushCache="true">
		 insert into ms_config_value(code,value,remark,create_time,user_id)
		 values(#{code},#{value},#{remark},#{createTime},#{userId})
	</insert>
	
	<delete id="delete" flushCache="true">
		delete from ms_config_value
		<where>config_id=#{configId}</where>
	</delete>
	
	<update id="update" parameterType="msConfigValue" flushCache="true">
		update ms_config_value
		<set>
			code=#{code},value=#{value},remark=#{remark},create_time=#{createTime},user_id=#{userId}
		</set>
		<where>config_id=#{configId}</where>
	</update>
	
	<select id="get" resultType="msConfigValue">
		select <include refid="commCols"/> from ms_config_value
  		<where>config_id=#{configId}</where>
	</select>
	
	<select id="findMsConfigValue" parameterType="msConfigValue" resultType="msConfigValue">
		select * from ( select a.*, rownum rn from (
		select <include refid="commCols"/> from ms_config_value
		<where>
			<if test="name!=null and name!=''">and name like concat(concat('%', #{name}), '%')</if>
		</where>
		<choose>
		<when test="orderbys!=null and orderbys.size()>0">
			order by <foreach collection="orderbys" item="item" index="index" open="" separator="," close="">
				${item.property} ${item.type}
			</foreach>
		</when>
		<otherwise></otherwise>
		</choose>
		) a where rownum &lt;= #{orclEnd} ) where rn &gt;= #{orclBegin}
	</select>
	<select id="findMsConfigValueCount" parameterType="msConfigValue" resultType="int">
		select count(*) from ms_config_value
		<where>
			<if test="name!=null and name!=''">and name like concat(concat('%', #{name}), '%')</if>
			and isdel=0
		</where>
	</select>
</mapper>
